<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.valuebiz.servicemarket">
    <uses-permission android:name="android.permission.CALL_PHONE"/>
    <!-- Request Network -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <!-- Request vibrate -->
    <uses-permission android:name="android.permission.VIBRATE"/>
    <!-- Request inAppBilling -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.android.vending.BILLING"/>
    <!-- Request Network State -->
    <application
            android:allowBackup="true"
            android:icon="@mipmap/icon"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name="com.valuebiz.servicemarket.activities.WebViewActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <service android:name="com.valuebiz.servicemarket.fcm.FCMMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>

        <service android:name="com.valuebiz.servicemarket.fcm.FCMTokenService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>


    </application>

</manifest>